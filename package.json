    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "body-parser": "^1.19.0",
    "eslint": "^7.26.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "module-alias": "^2.2.2",
